{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "local>USA-RedDragon/renovate-configs"
    ],
    "customManagers": [
        {
            "customType": "regex",
            "fileMatch": [
                ".*"
            ],
            "matchStrings": [
                "ghcr\\.io/siderolabs/kubelet:(?<currentValue>.+)"
            ],
            "datasourceTemplate": "docker",
            "depNameTemplate": "ghcr.io/siderolabs/kubelet",
            "versioningTemplate": "semver"
        },
        {
            "customType": "regex",
            "fileMatch": [
                ".*"
            ],
            "matchStrings": [
                "ghcr\\.io/usa-reddragon/kubelet:(?<currentValue>.+)"
            ],
            "datasourceTemplate": "docker",
            "depNameTemplate": "ghcr.io/usa-reddragon/kubelet",
            "versioningTemplate": "semver"
        }
    ],
    "packageRules": [
        {
            "groupName": "Kubernetes containers",
            "matchDatasources": [
                "docker"
            ],
            "matchPackageNames": [
                "ghcr.io/siderolabs/kubelet",
                "ghcr.io/usa-reddragon/kubelet",
                "registry.k8s.io/kube-scheduler",
                "registry.k8s.io/kube-proxy",
                "registry.k8s.io/kube-controller-manager",
                "registry.k8s.io/kube-apiserver"
            ]
        }
    ]
}
